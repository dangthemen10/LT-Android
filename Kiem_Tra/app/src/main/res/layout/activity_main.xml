<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐỀ THI THỰC HÀNH HK2 - 2016/2017"
        android:textColor="#D30606"
        android:gravity="center" />
    <TextView
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:background="#8A7C7C"
        android:layout_height="wrap_content"
        android:text="CHUYỂN ĐỔI ĐƠN VỊ ĐƯỜNG HUYẾT"
        android:textColor="#011D71"
        android:gravity="center"
        android:visibility="invisible"
        android:id="@+id/txt1"/>
    <TextView
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#8A7C7C"
        android:text="TÍNH ĐIỂM TỔNG HỢP"
        android:textColor="#011D71"
        android:gravity="center"
        android:visibility="invisible"
        android:id="@+id/txt2"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHỌN CHỨC NĂNG"
        android:textColor="#000000"
        android:textSize="10dp"
        android:id="@+id/check"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu Ý"
            android:id="@+id/btn1"
            android:textColor="#020985"/>
        <TextView
            android:layout_weight="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THOÁT"
            android:textColor="#021577"
            android:id="@+id/btn2"/>
    </LinearLayout>


</LinearLayout>