<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TÍNH ĐIỂM THI"
        android:padding="20dp"
        android:textSize="30dp"
        android:textColor="#f00"
        android:layout_marginTop="10dp"
        android:gravity="center"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm thực hành"
                android:textSize="20dp"
                android:textColor="#f02"/>
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="#000000"
                android:id="@+id/thuchanh"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm thi điền khuyết"
                android:textSize="20dp"
                android:textColor="#f02"/>
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="#000000"
                android:id="@+id/dienkhuyet"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm thi trắc nghiệm"
                android:textSize="20dp"
                android:textColor="#f02"/>
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="#000000"
                android:id="@+id/tracnghiem"/>
        </TableRow>
    </TableLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm thi thực hành"
                android:textSize="20dp"
                android:textColor="#f02"/>
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="#000000"
                android:id="@+id/thuchanh1"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIẾP TỤC"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#f00"
            android:layout_weight="1"
            android:id="@+id/tieptuc"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐIỂM TỔNG HỢP"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#14D306"
            android:layout_weight="1"
            android:id="@+id/diemtonghop"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THOÁT"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#FFC107"
            android:layout_weight="1"
            android:id="@+id/thoat"/>

    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KẾT QUẢ ĐIỂM"
                android:textSize="20dp"
                android:textColor="#0040FF"/>
            <TextView
                android:id="@+id/kq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:ems="3"
                android:gravity="center"
                android:textSize="20dp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>